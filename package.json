{
  "name": "filter-php-class-list-with-glob-like-rules-action",
  "version": "0.0.0",
  "description": "This action filters PHP classes list based on GLOB criteria",
  "main": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:impresscms-dev/filter-php-class-list-with-glob-like-rules-action.git"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build --minify",
    "all": "npm install && npm run build && npm run format && npm run lint && npm run pack",
    "fast-all": "npm install && npm run build && npm run pack"
  },
  "keywords": [
    "github actions",
    "php classes",
    "filter",
    "glob"
  ],
  "author": "Raimondas Rimkeviƒçius (aka MekDrop)",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "@types/picomatch": "^3.0.0",
    "picomatch": "^4.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "ts-jest": "^29.0.5",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^22.0.2",
    "@typescript-eslint/eslint-plugin": "^7.4",
    "@typescript-eslint/parser": "^7.4",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^9.11.1",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.3.0",
    "jest": "^29.4.1",
    "prettier": "^3.0.0",
    "semver": "^7.3.8",
    "typescript": "^5.0.3"
  }
